// See https://aka.ms/new-console-template for more information

//Ajuste da sintaxe da declaracao de matriz.
int[,] matriz = new int[3, 3];

//Como o indice em c# comeca em  0, nao podemos acessar o indice 3 e vamos ate o indice < 3
for (int i = 0; i < 3; i++)
{
    //Como o indice em c# comeca em 0, nao podemos acessar o indice 3 e vamos ate o indice < 31
    for (int j = 0; j  <  3; j++)
    {
        Console.Write($"Valor [{i},{j}]: ");
        matriz[i, j] = int.Parse(Console.ReadLine());
    }
}

Console.Write("Número a buscar: ");

//Faltava ponto e virgula no final da linha.
int buscado = int.Parse(Console.ReadLine());

//Variavel boolean so eh atribuido true ou false.
bool encontrado = false;

int linha = 0, coluna = 0;
//Como o indice em c# comeca em 0, nao podemos acessar o indice 3 e vamos ate o indice < 3
for (int i = 0; i < 3; i++)
{
    //Como o indice em c# comeca em 0, nao podemos acessar o indice 3 e vamos ate o indice < 3
    for (int j = 0; j < 3; j++)
    {
        //Comparacao nao utiliza o operador = e sim ==
        if (matriz[i, j] == buscado)
        {
            //Atribuicao e feito com o operador =
            encontrado = true;
            linha = j;
            coluna = i;
            break;
        }
    }

    if (encontrado) break;
}

//Nao precisa do comparador logico para ver se uma variavel boolean eh true
if (encontrado)
{
    //Console.WrileLine escrita de forma incorreta e falta ponto e virgula no final da linha.
    Console.WriteLine($"Encontrado em ({linha + 1}, {coluna + 1})");

}
else
{
    Console.WriteLine($"Número não encontrado: {buscado}");
}
